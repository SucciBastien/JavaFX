<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import com.example.demo.*?>

<VBox alignment="CENTER" spacing="40" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.TableViewController">
   <HBox alignment="CENTER" spacing="40" >
      <children>
         <Button fx:id="addButton" text="Ajouter" />
         <Button fx:id="modifyButton" text="Modifier" />
         <Button fx:id="deleteButton" text="Supprimer" />
      </children>
   </HBox>
   
   <TableView fx:id="myTable">
      <columns>
         <TableColumn fx:id="nomCol" text="Nom" prefWidth="100">
            <cellValueFactory>
               <PropertyValueFactory property="nom" />
            </cellValueFactory>
         </TableColumn>
         <TableColumn fx:id="prenomCol" text="Prenom" prefWidth="100">
            <cellValueFactory>
               <PropertyValueFactory property="prenom" />
            </cellValueFactory>
         </TableColumn>
         <TableColumn fx:id="dateCol" text="Date d'embauche" prefWidth="150">
            <cellValueFactory>
               <PropertyValueFactory property="dateEmbauche" />
            </cellValueFactory>
         </TableColumn>
         <TableColumn fx:id="fonctionCol" text="Fonction" prefWidth="100">
            <cellValueFactory>
               <PropertyValueFactory property="fonction" />
            </cellValueFactory>
         </TableColumn>
         <TableColumn fx:id="salaireCol" text="Salaire Brut (K)" prefWidth="100">
            <cellValueFactory>
               <PropertyValueFactory property="salaireBrut" />
            </cellValueFactory>
         </TableColumn>
         <TableColumn fx:id="serviceCol" text="Service" prefWidth="100">
            <cellValueFactory>
               <PropertyValueFactory property="service" />
            </cellValueFactory>
         </TableColumn>
         <TableColumn fx:id="agenceCol" text="Agence" prefWidth="100">
            <cellValueFactory>
               <PropertyValueFactory property="agence" />
            </cellValueFactory>
         </TableColumn>
      </columns>
   </TableView>
</VBox>
   

